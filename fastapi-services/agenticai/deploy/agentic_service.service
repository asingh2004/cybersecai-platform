[Unit]
Description=Agentic AI FastAPI Gunicorn Agentic AI Service
After=network.target

[Service]
# Adjust these:
User=cybersecai
WorkingDirectory=/home/cybersecai/htdocs/www.cybersecai.io/fastapi-services/agenticai
Environment=OPENAI_API_KEY=${OPENAI_API_KEY}
Environment="PATH=/home/cybersecai/htdocs/www.cybersecai.io/webhook/venv/bin"

# Activate your venv if you use one (recommended):
ExecStart=/home/cybersecai/htdocs/www.cybersecai.io/webhook/venv/bin/gunicorn -w 1 -k uvicorn.workers.UvicornWorker -b 127.0.0.1:8222 agentic_service:app

# Logging
StandardOutput=append:/var/log/agentic_service.log
StandardError=append:/var/log/agentic_service_error.log

Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
